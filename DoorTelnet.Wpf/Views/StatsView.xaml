<UserControl x:Class="DoorTelnet.Wpf.Views.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="160" MinHeight="100">
    <StackPanel>
        <TextBlock Text="Stats" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>

        <!-- HP line with current / max -->
        <TextBlock>
            <Run Text="HP: "/>
            <Run Text="{Binding Hp, Mode=OneWay}"/>
            <Run Text="/"/>
            <Run Text="{Binding MaxHp, Mode=OneWay}"/>
            <Run Text=" ("/>
            <Run Text="{Binding HpPercent, Mode=OneWay}"/>
            <Run Text="%)"/>
        </TextBlock>

        <!-- MP line -->
        <TextBlock Text="{Binding Mp, Mode=OneWay, StringFormat=MP: {0}}" />
        <!-- MV line -->
        <TextBlock Text="{Binding Mv, Mode=OneWay, StringFormat=MV: {0}}" />
        <!-- AC / AT line -->
        <TextBlock>
            <Run Text="AC: "/><Run Text="{Binding Ac, Mode=OneWay}"/><Run Text="  AT: "/><Run Text="{Binding At, Mode=OneWay}"/>
        </TextBlock>
        <!-- State line -->
        <TextBlock Text="{Binding State, Mode=OneWay}" Foreground="#AAA" FontStyle="Italic" />
    </StackPanel>
</UserControl>