<UserControl x:Class="DoorTelnet.Wpf.Views.RoomView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="260" MinHeight="240">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Room Info Section -->
                <Border Background="#1a1d21" BorderBrush="#333" BorderThickness="1" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Room" FontWeight="Bold" FontSize="12" Foreground="{StaticResource Brush.AccentLight}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding RoomName}" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,6" FontSize="11"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Room ID:" FontSize="9" Foreground="{StaticResource Brush.TextMuted}" Margin="0,0,6,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding RoomId}" FontSize="9" Foreground="#CCC"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Exits Section -->
                <Border Background="#1a1d21" BorderBrush="#333" BorderThickness="1" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Exits" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,4"/>
                        <ItemsControl ItemsSource="{Binding Exits}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2d2d2d" BorderBrush="#555" BorderThickness="1" CornerRadius="3" Padding="8,3" Margin="0,0,4,4">
                                        <TextBlock Text="{Binding}" FontSize="10" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Monsters Section -->
                <Border Background="#1a1d21" BorderBrush="#333" BorderThickness="1" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Monsters" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,4"/>
                        <ItemsControl ItemsSource="{Binding Monsters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252829" BorderBrush="#3a3a3a" BorderThickness="1" CornerRadius="2" Padding="6,3" Margin="0,0,0,3">
                                        <TextBlock Text="{Binding DisplayName}" FontSize="10">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAggressive}" Value="True">
                                                            <Setter Property="Foreground" Value="#FF5252" />
                                                            <Setter Property="FontWeight" Value="SemiBold" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TargetingYou}" Value="True">
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                            <Setter Property="Foreground" Value="#FF1744" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="No monsters" FontSize="9" Foreground="{StaticResource Brush.TextMuted}" Margin="0,2,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Monsters.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Items Section -->
                <Border Background="#1a1d21" BorderBrush="#333" BorderThickness="1" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Items" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,4"/>
                        <ItemsControl ItemsSource="{Binding Items}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="10" Margin="0,0,0,2" Foreground="#E0E0E0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="No items" FontSize="9" Foreground="{StaticResource Brush.TextMuted}" Margin="0,2,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Items.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Navigation Section -->
                <Border Background="#1a1d21" BorderBrush="#333" BorderThickness="1" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Navigation" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,6"/>
                        
                        <!-- Movement Mode - using highlighted buttons instead of ComboBox -->
                        <TextBlock Text="Movement Mode" FontSize="9" Foreground="{StaticResource Brush.TextMuted}" Margin="0,0,0,3"/>
                        <UniformGrid Columns="3" Margin="0,0,0,8">
                            <Button Content="Ultra" Command="{Binding SelectUltraFastModeCommand}"
                                    FontSize="9" Padding="4,3" Margin="0,0,2,0"
                                    ToolTip="Ultra-Fast: 50ms delays">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMovementMode.Mode}" Value="UltraFast">
                                                <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentLight}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Fast" Command="{Binding SelectFastModeCommand}"
                                    FontSize="9" Padding="4,3" Margin="2,0,2,0"
                                    ToolTip="Fast: 200ms delays">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMovementMode.Mode}" Value="FastWithFallback">
                                                <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentLight}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Safe" Command="{Binding SelectReliableModeCommand}"
                                    FontSize="9" Padding="4,3" Margin="2,0,0,0"
                                    ToolTip="Reliable: Wait for room detection">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMovementMode.Mode}" Value="Triggered">
                                                <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentLight}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </UniformGrid>
                        
                        <!-- Destination -->
                        <TextBlock Text="Destination" FontSize="9" Foreground="{StaticResource Brush.TextMuted}" Margin="0,0,0,3"/>
                        <Grid Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0" 
                                      Text="{Binding NavigationDestination, UpdateSourceTrigger=PropertyChanged}" 
                                      ItemsSource="{Binding NavigationSuggestions}"
                                      SelectedItem="{Binding SelectedSuggestion}"
                                      IsDropDownOpen="{Binding IsDropDownOpen, Mode=TwoWay}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      FontSize="10" Margin="0,0,4,0"
                                      ToolTip="Enter room name or ID"
                                      Loaded="ComboBox_Loaded">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="2">
                                            <TextBlock Text="{Binding DisplayText}" FontSize="10" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding RoomId, StringFormat='ID: {0}'}" FontSize="8" Foreground="{StaticResource Brush.TextMuted}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <Button Grid.Column="1" Content="Go" Command="{Binding StartNavigationCommand}"
                                    FontSize="9" Padding="8,3" Margin="0,0,2,0"/>
                            <Button Grid.Column="2" Content="Stop" Command="{Binding StopNavigationCommand}"
                                    FontSize="9" Padding="8,3"/>
                        </Grid>
                        
                        <!-- Quick actions -->
                        <UniformGrid Columns="2" Margin="0,0,0,6">
                            <Button Content="Find Stores" Command="{Binding FindStoresCommand}"
                                    FontSize="9" Padding="4,3" Margin="0,0,2,0"/>
                            <Button Content="Set Pending" Command="{Binding SetPendingDestinationCommand}"
                                    FontSize="9" Padding="4,3" Margin="2,0,0,0"/>
                        </UniformGrid>
                        
                        <!-- Status -->
                        <Border Background="#252829" BorderBrush="#3a3a3a" BorderThickness="1" CornerRadius="2" Padding="6,4">
                            <TextBlock Text="{Binding NavigationStatus}" FontSize="9" Foreground="#AAA" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Updated timestamp -->
                <TextBlock HorizontalAlignment="Right" FontSize="8" Foreground="#666" Margin="0,4,0,0">
                    <Run Text="Updated:"/>
                    <Run Text="{Binding LastUpdated, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>