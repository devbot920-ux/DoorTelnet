<Window x:Class="DoorTelnet.Wpf.Views.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="380" Width="520" WindowStartupLocation="CenterOwner"
        Background="{StaticResource Brush.Panel}" Foreground="{StaticResource Brush.Text}" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Application Settings" FontWeight="Bold" FontSize="14" />

        <TabControl Grid.Row="1" Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}">
            <TabItem Header="Connection">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Host" Width="90"/>
                        <TextBox Width="200" Text="{Binding Host}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="Port" Width="90"/>
                        <TextBox Width="80" Text="{Binding Port}" />
                    </StackPanel>
                    <CheckBox Content="Auto Reconnect" IsChecked="{Binding AutoReconnect}" Margin="0,10,0,0" />
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Delay (sec)" Width="90"/>
                        <TextBox Width="60" Text="{Binding AutoReconnectDelaySec}" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="UI">
                <StackPanel Margin="10">
                    <TextBlock Text="Theme (placeholder)" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Reload" Width="80" Command="{Binding ReloadCommand}" />
            <Button Content="Save" Width="80" Margin="6,0,0,0" Command="{Binding SaveCommand}" />
            <Button Content="Close" Width="80" Margin="12,0,0,0" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>