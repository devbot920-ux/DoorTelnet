<Window x:Class="DoorTelnet.Wpf.Views.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="460" Width="620" WindowStartupLocation="CenterOwner"
        Background="{StaticResource Brush.Panel}" Foreground="{StaticResource Brush.Text}" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Application Settings" FontWeight="Bold" FontSize="14" />

        <TabControl Grid.Row="1" Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}">
            <TabItem Header="Connection">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Host" Width="120"/>
                            <TextBox Width="220" Text="{Binding Host}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Port" Width="120"/>
                            <TextBox Width="80" Text="{Binding Port}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Last User" Width="120"/>
                            <TextBox Width="180" Text="{Binding LastUser}" />
                        </StackPanel>
                        <CheckBox Content="Auto Reconnect" IsChecked="{Binding AutoReconnect}" Margin="0,10,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Delay (sec)" Width="120"/>
                            <TextBox Width="60" Text="{Binding AutoReconnectDelaySec}" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="UI">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Theme" Width="120"/>
                        <TextBox Width="160" Text="{Binding Theme}" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Login Script">
                <StackPanel Margin="10">
                    <CheckBox Content="Send Login Script" IsChecked="{Binding SendLoginScript}" />
                    <TextBlock Text="Script (supports {ENTER} and {WAIT:ms})" Margin="0,10,0,4"/>
                    <TextBox Text="{Binding LoginScript}" AcceptsReturn="True" Height="160" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Reload" Width="80" Command="{Binding ReloadCommand}" />
            <Button Content="Save" Width="80" Margin="6,0,0,0" Command="{Binding SaveCommand}" />
            <Button Content="Close" Width="80" Margin="12,0,0,0" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>