<Window x:Class="DoorTelnet.Wpf.Views.Dialogs.CredentialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credentials" Height="340" Width="420" WindowStartupLocation="CenterOwner"
        Background="{StaticResource Brush.Panel}" Foreground="{StaticResource Brush.Text}" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Manage stored credentials" FontWeight="Bold" FontSize="14"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Existing:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox Width="200" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" />
            <CheckBox Content="New" IsChecked="{Binding IsNew}" Margin="8,0,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                <TextBlock Text="Username" Width="80"/>
                <TextBox Width="220" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="Password" Width="80"/>
                <PasswordBox x:Name="PwdBox" Width="220" PasswordChanged="PwdBox_PasswordChanged" />
            </StackPanel>
            <TextBlock Text="(Enter password when creating or updating)" FontSize="11" Foreground="{StaticResource Brush.TextMuted}" Margin="0,6,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Command="{Binding SaveCommand}"/>
            <Button Content="Delete" Width="80" Command="{Binding DeleteCommand}" Margin="6,0,0,0"/>
            <Button Content="Close" Width="80" Command="{Binding CloseCommand}" Margin="12,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>